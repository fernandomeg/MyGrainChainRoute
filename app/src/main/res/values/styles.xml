<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">


    </style>


    <style name="ButtonStyleWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@drawable/txt_white</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonStyleNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@drawable/txt_transparent</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="AnimacionModal" parent="@android:style/Animation.Activity">
        <item name="android:layout_width">600dp</item>
        <item name="android:windowEnterAnimation">@anim/agrandar</item>
        <item name="android:windowExitAnimation">@anim/disminuir</item>
    </style>
</resources>
